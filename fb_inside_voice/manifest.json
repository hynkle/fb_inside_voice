{
  "manifest_version": 2,

  "name": "FB Inside Voice",
  "description": "Makes Facebook's large-text, color- and gradient-background posts look like every other normal, non-shouty post.",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "http://www.facebook.com/*"
      ],
      "js": [
        "fb_inside_voice.js"
      ]
    }
  ]
}
